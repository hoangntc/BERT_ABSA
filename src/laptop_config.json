{
    "data_params": {
        "data_train_dir": "../dataset/preprocessed_data/Laptops_Train.csv",
        "data_test_dir": "../dataset/preprocessed_data/Laptops_Test.csv",
        "transformation": "QA_M",
        "num_classes": 3,
        "batch_size": 64,
        "bert_name": "bert-base-uncased",
        "max_length": 128,
        "seed": 12345
    },
    
    "model_params": {
        "pretrained_bert_name": "bert-base-uncased",
        "hidden_size": 128,
        "hidden_dropout_prob": 0.1,
        "lr": 0.0001
    },
    
    "trainer_params": {
        "checkpoint_path": "../model/laptops",
        "top_k": 3,
        "max_epochs": 100,
        "metric": "val_loss",
        "patience": 10,
        "mode": "min"    
    }
}
